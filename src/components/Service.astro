---
import type { HTMLAttributes } from 'astro/types';
import Modal from "../components/Modal.astro";

export interface Props extends HTMLAttributes<'div'> {
    icon: string;
    title: string;
    text: string;
    button1: string;
    button2: string;
}

const { id, icon, title, text, button1, button2 } = Astro.props;
---

<a class="swiper-slide card card--service" data-open={`modal-${id}`}>
    <div class="service-icon" set:html={icon}></div>
    <h3 set:html={title}></h3>
    <p set:html={text}></p>
    <span class="primary button">{button1}</span>

	<Modal id={`modal-${id}`} title={title} button={button2} close="ZavrieÅ¥ okno">
		<Fragment slot="icon" set:html={icon}>
		</Fragment>
		<Fragment slot="content">
            <slot/>
		</Fragment>
	</Modal>
</a>