---
import { getImage } from 'astro:assets';
import { projectTags } from '../data/tags';
import CardBlog from './CardBlog.astro';
import { useTranslations, useTranslatedPath } from '../i18n/utils';
import type { AugmentedData } from '../utils/contentAugmentation';
import BlogImageRow from './BlogImageRow.astro';
import BlogImage from './BlogImage.astro';
import { formatLocalizedDate } from '../utils/date';
import { processGalleryImages } from '../utils/imageUtils';
import Gallery from './Gallery.astro';

interface Props {
    post: AugmentedData<'blog'>;
    lang: 'sk' | 'cz';
    allPosts: AugmentedData<'blog'>[];
}

const { post, lang, allPosts } = Astro.props;
const { Content } = await post.render();
const t = useTranslations(lang);
const translatedPath = await useTranslatedPath(lang);

const formattedDate = post.data.date ? formatLocalizedDate(new Date(post.data.date), lang) : '';

const allGalleryImageLoaders = import.meta.glob('/src/content/blog/**/gallery/*.{jpg,jpeg,png,webp,gif,heic}');
let galleryImages: any[] = [];
let otherPosts: AugmentedData<'blog'>[] = [];

if (post) {
    const postDir = post.id.replace(/\/index.*$/, '');
    const postImages = Object.entries(allGalleryImageLoaders)
        .filter(([path]) => path.includes(`/src/content/blog/${postDir}/gallery/`))
        .reduce((acc, [path, loader]) => ({ ...acc, [path]: loader }), {});

    galleryImages = await processGalleryImages(postImages as any, post.data.title || post.slug);

    const blogsByDir = new Map(allPosts.map(p => [p.data.dir, p]));
    if (post.data.otherBlogPosts) {
        otherPosts = post.data.otherBlogPosts.map(dir => blogsByDir.get(dir)).filter(Boolean) as AugmentedData<'blog'>[];
    }

    if (otherPosts.length < 3) {
        const remainingPosts = allPosts.filter(p => p.id !== post.id && !otherPosts.find(op => op.id === p.id));
        // Simple shuffle
        const shuffled = [...remainingPosts].sort(() => 0.5 - Math.random());
        const randomPosts = shuffled.slice(0, 3 - otherPosts.length);
        otherPosts.push(...randomPosts);
    }
}
---

<div class="hero hero--project hero--blog">
    <div class="hero__img">
        <img src={post.data.image} 
          srcset={post.data.imageSet} 
          alt={post.data.title}>
    </div>
    <div class="hero__content grid-container grid-x">
        <div class="cell large-8 large-offset-4">
            <a href={translatedPath('/blog/')} class="backlink hide-for-large">
                <span class="arrow">
                    <svg class="icon icon-arrow-prev">
                        <use xlink:href="#icon-arrow-prev"></use>
                    </svg>
                </span>
                {t('blog.back')}
            </a>
            <h1 set:html={post.data.titleBreak}></h1>
        </div>
    </div>
    <a href={translatedPath('/blog/')} class="backlink show-for-large">
        <span class="arrow">
            <svg class="icon icon-arrow-prev">
                <use xlink:href="#icon-arrow-prev"></use>
            </svg>
        </span>
        {t('blog.back')}
    </a>
</div>
<a id="main"></a>

<div class="section section--detail">
    <div class="grid-container">
        <div class="grid-x grid-margin-x align-center">
            <div class="cell medium-9 large-7">
                <article class="h-article">
                    {false && (
                        <div class="blog-date">{formattedDate}</div>
                    )}
                    <Content components={{ BlogImageRow, img: BlogImage }} />
                </article>
            </div>
        </div>
    </div>
</div>


<!-- Galeria je zatial vypnuta -->
{galleryImages.length > 0 && 0 && (
    <Gallery images={galleryImages} lang={lang} />
)}

{otherPosts.length > 0 && (
<div class="section pt-0" style="overflow-x:hidden">
    <div class="grid-container">
        <h2 class="h3">{t('blog.more')}</h2>
        <div class="swiper swiper--projects-3">
            <div class="swiper-wrapper">
            {
                otherPosts.map((otherPost) => (
                    <CardBlog post={otherPost} className="swiper-slide"/>
                ))
            }
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</div>
)}

<style is:global>
    .blog-date {
        font-family: Switzer, sans-serif;
        font-size: 1rem;
        color: var(--color-gold);
        margin-bottom: 1.5rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    .h-article img,
    .h-article a:has(> img) {
        /* display: contents; for image is not good, but for the 'a' wrapper it is essential */
    }
    .h-article a:has(> img) {
        display: contents;
    }

    .h-article img {
        display: block;
        margin-bottom: 2.5rem;
        cursor: pointer;
        transition: transform 0.3s ease;
        margin-left: auto;
        margin-right: auto;
        width: auto;
        max-width: 100%;
    }

    /* Robust breakout for single images in paragraphs */
    @media (min-width: 400px) {
        /*
        .h-article > p > a > img,
        .h-article > p > img {
            width: 100vw;
            max-width: min(900px, 100vw - 2rem);
            position: relative;
            left: 50%;
            transform: translateX(-50%);
        }
        */

        .h-article img:hover {
            transform: scale(1.01);
        }
        
        /* Special case: if image is breakout, hover must preserve transform */
        .h-article > p > a:hover > img,
        .h-article > p:hover > img {
            /* This is tricky because we use translate for centering */
        }
        
        /* Better to just apply scale to the image and let it inherit the translate if needed */
        /* Actually, if we apply scale(1.01) to an already transformed element, it might conflict */
        /* Let's use a simpler hover that doesn't conflict with translate if possible, or include translate in hover */
        
        /*
        .h-article > p > a > img:hover,
        .h-article > p > img:hover {
            transform: translateX(-50%) scale(1.01);
        }
        */
    }

    @media (max-width: 400px) {
        .h-article img {
            max-width: 100%;
        }
    }
</style>
